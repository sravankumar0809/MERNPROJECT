<%- layout("layouts/boilerplate.ejs") %>

    <body>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xsm-1">
            <%for(list of lists) { %>
                <a href="/listings/<%=list._id %>">
                <div class="card col">
                    <img src="<%= list.image %>" class="card-img-top" alt="..." style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                                <b><%= list.title %></b>
                            <br>
                                <%= list.price.toLocaleString("en-IN") %> / Night
                        </p>
                    </div>
                </div>
                </a>
                 <% } %>
        </div>
    </body>

