<%- layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-8 offset-3">
            <h3>list details</h3>
        </div>
        <div class="card  col-6 offset-3">
            <img src="<%= list.image %>" class="card-img-top show-img" alt="listing">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= list.title %>
                    </b> <br>
                    <%= list.description %> <br>
                        <%= list.price.toLocaleString("en-IN") %> <br>
                            <%= list.location %> <br>
                                <%= list.country %> <br>
                </p>
            </div>
        </div>
        <div class="btns mt-3 col-7 offset-3">
            <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-2 edit-btn">Edit</a>
            <form action="/listings/<%=list._id%>?_method=DELETE" method="post">
                <button class="btn btn-dark col offset-2 add-btn">Delete</button>
            </form>
        </div>
    </div>